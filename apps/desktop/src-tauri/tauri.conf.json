{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Observer",
  "version": "0.2.0",
  "identifier": "com.observer.desktop",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5174",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Observer",
        "width": 900,
        "height": 680,
        "minWidth": 600,
        "minHeight": 500,
        "visible": true,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "skipTaskbar": false,
        "alwaysOnTop": false,
        "center": true,
        "titleBarStyle": "Transparent",
        "hiddenTitle": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": "default-src 'self' tauri:; script-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://*.railway.app http://localhost:* ws://localhost:*; img-src 'self' data: https:; font-src 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "shortDescription": "AI-powered personal assistant that observes and automates",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.png"
    ],
    "macOS": {
      "entitlements": "entitlements.plist",
      "minimumSystemVersion": "10.15",
      "signingIdentity": null,
      "providerShortName": null,
      "infoPlist": "Info.plist"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEUzNEUzRjQ0QzY0M0ExMUIKUldSYklhUlJSRDg0THRUTy9TbTF4ZG9BM0pvYmFTc1pGTkpJQ0JEVjFVQlAzRjRFS3NMM0RiQzMK",
      "endpoints": [
        "https://github.com/alex4udak-blip/AlexAI-assist/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
