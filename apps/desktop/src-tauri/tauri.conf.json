{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Observer",
  "version": "0.1.0",
  "identifier": "com.observer.app",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5174",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "title": "Observer",
        "width": 320,
        "height": 400,
        "visible": false,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "skipTaskbar": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "entitlements.plist",
      "minimumSystemVersion": "10.15",
      "frameworks": [
        "ApplicationServices.framework"
      ],
      "signingIdentity": null,
      "providerShortName": null,
      "infoPlist": {
        "NSAccessibilityUsageDescription": "Observer needs Accessibility access to track which applications you use and help analyze your work patterns.",
        "NSAppleEventsUsageDescription": "Observer uses Apple Events to communicate with other applications.",
        "LSUIElement": true
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "",
      "endpoints": []
    }
  }
}
